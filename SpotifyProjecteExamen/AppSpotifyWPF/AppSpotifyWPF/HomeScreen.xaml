<Window x:Class="AppSpotifyWPF.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="800" Width="1000"
        Background="#F5F6FA">

    <Grid>

        <!-- ====== VISTA PRINCIPAL (HOME) ====== -->
        <Grid x:Name="HomeContent">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="40">

                    <!-- Título principal -->
                    <TextBlock Text="Home Screen"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="Black"
                               Margin="0,0,0,20"/>

                    <!-- USERS MANAGEMENT -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="Users Managment"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,10" />

                            <UniformGrid Columns="4" Rows="1"
                                         Margin="0,10,0,0"
                                         HorizontalAlignment="Center"
                                         Width="700">

                                <!-- Create User -->
                                <Button x:Name="butCrearUser"
                                        Margin="10" Padding="20"
                                        Background="White"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        Click="butCrearUser_Click" HorizontalAlignment="Left" Width="155">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE710;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Create"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Add user"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Read User -->
                                <Button x:Name="butReadUser"
                                        Margin="10" Padding="20"
                                        Background="White"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        Click="butReadUser_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE716;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Read"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="See details"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Update User -->
                                <Button x:Name="butUpdateUser"
                                        Margin="10" Padding="20"
                                        Background="White"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        Click="butUpdateUser_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE70F;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Update"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Modify information"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Delete User -->
                                <Button x:Name="butDeleteUser"
                                        Margin="10" Padding="20"
                                        Background="White"
                                        BorderBrush="#E0E0E0"
                                        BorderThickness="1"
                                        Click="butDeleteUser_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE74D;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Delete"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Delete user"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                            </UniformGrid>
                        </StackPanel>
                    </Border>


                    <!-- SONGS MANAGEMENT -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,25">
                        <StackPanel>
                            <TextBlock Text="Songs Managemnt"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,10" />

                            <UniformGrid Columns="4" Rows="1"
                                         Margin="0,10,0,0"
                                         HorizontalAlignment="Center"
                                         Width="700">
                                <Button x:Name="butCrearSong"
                                        Margin="10" 
                                        Padding="20" 
                                        Background="White" 
                                        BorderBrush="#E0E0E0" 
                                        BorderThickness="1"
                                        Click="butCrearSong_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE189;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Create"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Add a song"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Margin="10,0,0,0" Padding="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" HorizontalAlignment="Left" Width="155" Click="Button_Click">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE179;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Read"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="See details"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Margin="10" Padding="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE70F;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Update"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Update information"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Margin="10" Padding="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1" Click="Button_Click_1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE74D;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Delete"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Delete song"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </UniformGrid>
                        </StackPanel>
                    </Border>


                    <!-- PLAYLISTS MANAGEMENT -->
                    <Border Background="White" CornerRadius="10" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Playlists Managment"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,10"/>

                            <UniformGrid Columns="4" Rows="1"
                                         Margin="0,10,0,0"
                                         HorizontalAlignment="Center"
                                         Width="700">

                                <Button Margin="10" Padding="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE710;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Create"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Add playlist"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Margin="10" Padding="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE179;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Read"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="See deatils"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Margin="10" Padding="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE70F;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Update"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Update playlist"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Margin="10" Padding="20" Background="White" BorderBrush="#E0E0E0" BorderThickness="1">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets"
                                                   Text="&#xE74D;"
                                                   FontSize="36"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Delete"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Deletes playlist"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                            </UniformGrid>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>


        <!-- ====== FRAME PARA PANTALLAS CRUD ====== -->
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Background="White"
               Visibility="Collapsed"/>
    </Grid>
</Window>
